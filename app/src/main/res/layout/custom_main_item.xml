<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp">
        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pieceimg"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:elevation="0dp"
                android:padding="10dp"
                android:src="@drawable/item1"
                 />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/piecefav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:src="@drawable/blank_heart"/>
        </com.google.android.material.circularreveal.CircularRevealFrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp">
        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/piecename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="black dress"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/pieceprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="63 sales"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:textColor="@color/pink"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_star_24"></ImageView>
                <TextView
                    android:id="@+id/piecerating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>

        </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>